<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    android:layout_marginTop="0dp"

    android:id="@+id/ll">

    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="327dp"
            android:id="@+id/msgcard"
            android:elevation="12dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="2dp"
            android:thicknessRatio="1.9"

            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/msg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#03a9f4"
                    android:id="@+id/exp2"
                    android:theme="@style/pro"
                    android:textSize="20dp"
                    android:text="DESIGN THINKING 1.0 WINNERS"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="107dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="2dp"

                    android:innerRadius="2dp"
                    android:layout_height="125dp">

                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:layout_width="106dp"
                        android:layout_height="106dp"
                        android:id="@+id/i1"
                        android:src="@drawable/win1"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="bottom|center"
    android:layout_height="wrap_content" android:text="Rahul"/>

                </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="107dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="2dp"
android:layout_marginLeft="3dp"
                        android:innerRadius="2dp"
                        android:layout_height="125dp">

                        <ImageView
                            android:id="@+id/i2"
                            android:layout_width="106dp"
                            android:layout_height="106dp"
                            android:src="@drawable/win2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_height="wrap_content" android:text="Abrar"/>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="107dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="2dp"

                        android:innerRadius="2dp"
                        android:layout_height="125dp">

                        <ImageView
                android:id="@+id/i3"
                            android:layout_width="106dp"
                            android:layout_height="106dp"
                            android:src="@drawable/win3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_height="wrap_content" android:text="Deepak"/>

                    </android.support.v7.widget.CardView>
                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="327dp"
            android:id="@+id/msgcard2"
            android:elevation="12dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="2dp"
            android:thicknessRatio="1.9"

            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/msg2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingLeft="8dp"
                    android:textColor="#03a9f4"
                    android:id="@+id/exp22"
                    android:theme="@style/pro"
                    android:textSize="20dp"
                    android:text="Prizes"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="-> Cash Prize of Rs 3000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="-> Optical Mouse"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="-> Keyboard"/>
    </LinearLayout>

    <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
        android:paddingLeft="20dp"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="160dp"
android:paddingBottom="14dp"
                    android:layout_height="100dp" android:src="@drawable/prz"/>
            </LinearLayout>


</LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>





