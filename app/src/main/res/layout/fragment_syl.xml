<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    android:layout_marginTop="0dp"

    android:id="@+id/ll">

    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"


            android:id="@+id/crd11"
            android:elevation="12dp"
            app:cardCornerRadius="45dp"
            android:innerRadius="0dp"
            android:thicknessRatio="1.9"
            android:shape="ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:id="@+id/ll1"
                android:gravity="center">
                <TextView
                    android:id="@+id/img1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="WEEK - I"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/cerclebackgroundpink"

                    android:padding="10dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/crd22"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="12dp"
            app:cardCornerRadius="45dp"
            android:innerRadius="0dp"
            android:thicknessRatio="1.9"
            android:shape="ring"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll2"
                android:gravity="center">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/img2"
                    android:text="WEEK - II"
                    android:background="@drawable/cerclebackgroundblc"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/crd33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="12dp"
            app:cardCornerRadius="45dp"
            android:innerRadius="0dp"
            android:thicknessRatio="1.9"

            >
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/img3"
                    android:text="WEEK - III"
                    android:background="@drawable/cerclebackgroundblc"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="10dp"/>




            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:clipToPadding="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="0dp"
            android:src="@drawable/ic_arrow"/>

        <ImageView
            android:paddingLeft="75dp"
            android:id="@+id/arr2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow"/>
        <ImageView
            android:paddingLeft="75dp"
            android:id="@+id/arr3"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow"/>

    </LinearLayout>



    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="286dp"
            android:id="@+id/msgcard"
            android:elevation="12dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="2dp"
            android:thicknessRatio="1.9"

            android:layout_height="260dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/msg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#03a9f4"
                    android:id="@+id/exp2"
                    android:theme="@style/pro"
                    android:textSize="20dp"
                    android:text="@string/week1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/exp"
                    android:textSize="15dp"
                    android:text="@string/week1s"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/nextw"
        android:layout_gravity="center"
        android:layout_width="110dp"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircle="@+id/imgCir"
        app:layout_constraintCircleRadius="208dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnb"
        android:text="NEXT WEEK"
        android:elevation="10dp"
        android:theme="@style/AppTheme.Button"/>



</LinearLayout>





