<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/scrollbar_shape_style"
    android:layout_height="match_parent">


    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    android:layout_marginTop="0dp"

    android:id="@+id/ll">




    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="327dp"
            android:id="@+id/msgcard"
            android:elevation="12dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="2dp"
            android:thicknessRatio="1.9"

            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <nl.dionsegijn.konfetti.KonfettiView
                android:id="@+id/viewKonfetti"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/msg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#03a9f4"
                    android:id="@+id/exp2"
                    android:theme="@style/pro"
                    android:textSize="20dp"
                    android:text="About Design Thinking 2.0"/>

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/exp"
                    android:textSize="15dp"
                    android:text="@string/dtt2"/>



            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="327dp"
            android:id="@+id/msgcard2"
            android:elevation="12dp"
            app:cardCornerRadius="20dp"
            android:innerRadius="2dp"
            android:thicknessRatio="1.9"

            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/msgk"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#03a9f4"
                    android:id="@+id/exp222"
                    android:theme="@style/pro"
                    android:textSize="20dp"
                    android:text="Benefits of this Workshop:"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/exp22"
                        android:textSize="15dp"
                        android:text="@string/dt2"/>



            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>


    <ImageView
        android:layout_marginTop="23dp"
        android:layout_width="24dp"
        android:id="@+id/rbx"
        android:layout_height="24dp" android:layout_gravity="center" android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/sj"

        android:layout_width="wrap_content"
        android:textSize="13dp"
        android:layout_height="wrap_content"  android:text="DEVELOPED BY SATYAJIT"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/sj2"

        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:layout_height="wrap_content"  android:text="(Team RubiX)"/>

</LinearLayout>




</ScrollView>
